<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ASMBApp.Views.walletlist.NewAccount"
             Title="NewAccount" >
    <VerticalStackLayout >
        <Label 
            Text="Welcome to ASMB!"
            VerticalOptions="Center" 
            HorizontalOptions="Center" />
        <Label Text="{Binding Path=Model.Address}"></Label>
        <Button Text="随机生成秘钥" Command="{Binding Source= {StaticResource VMlc}, Path=AccountViewModels.InsertCmd}" CommandParameter="{Binding Source= {StaticResource VMlc}, Path=AccountViewModels.Model}"></Button>
    </VerticalStackLayout>
</ContentPage>